<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/selector_listview_item_click"
    android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_files_move"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:src="@mipmap/actionbar_discover_normal"
                android:id="@+id/iv_ico"
                android:layout_width="@dimen/global_padding_50"
                android:layout_height="@dimen/global_padding_50"
                />
            <LinearLayout
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color_black_CC000000"
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/global_textview_size_16"
                        android:layout_gravity="center"
                        android:text="姓名"/>

                    <TextView
                        android:paddingLeft="@dimen/global_padding_5"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color_black_66000000"
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/global_textview_size_14"
                        android:layout_gravity="center"
                        android:text="姓名"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_split_line"
                    android:layout_marginTop="@dimen/global_padding_5"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/backgroud_body_color" />
            </LinearLayout>


        </LinearLayout>



</LinearLayout>