<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="@dimen/global_padding_10"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_title_item"
        android:background="@drawable/selector_listview_item_click"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_height_35">
        <ImageView
            android:src="@mipmap/nr1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center"
            android:layout_marginLeft="@dimen/global_margin_5"
            android:textSize="@dimen/global_textview_size_14"
            android:textColor="@color/text_color_black_CC000000"
            android:text="@string/tv_find_groom_song_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginLeft="@dimen/global_margin_5"
            android:src="@mipmap/caidan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <com.qiu.neteasemusic.View.MyGridView
        android:id="@+id/gv_find"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="90dp"
        android:numColumns="3"
        android:verticalSpacing="@dimen/global_margin_1"
        android:horizontalSpacing="@dimen/global_margin_1"
        android:stretchMode="columnWidth"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:scrollbars="none"
        android:fadeScrollbars="true"
        android:fastScrollEnabled="true"
        android:fadingEdge="none"
        android:fadingEdgeLength="@dimen/global_margin_1"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        android:drawSelectorOnTop="false"
        android:gravity="center"/>

</LinearLayout>