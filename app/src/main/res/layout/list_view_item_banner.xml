<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.youth.banner.Banner
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/banner_find"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_height_150" >
        <TextView
            android:onClick="true"
            android:focusable="true"
            android:layout_marginBottom="@dimen/global_margin_5"
            android:layout_gravity="right|bottom"
            android:id="@+id/tv_banner_detail"
            android:background="@drawable/shape_btn_find_banner"
            android:text="@string/btn_text_find_banner_visit"
            android:textSize="@dimen/global_textview_size_11"
            android:textColor="@color/text_color_white_FFFFFF"
            android:paddingTop="@dimen/global_padding_3"
            android:paddingBottom="@dimen/global_padding_3"
            android:paddingLeft="@dimen/global_padding_15"
            android:paddingRight="@dimen/global_padding_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.youth.banner.Banner>

</LinearLayout>