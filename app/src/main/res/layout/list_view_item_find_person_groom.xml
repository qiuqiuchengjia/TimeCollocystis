<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:weightSum="0.9"
    android:clickable="false"
    android:focusable="false"
    android:background="@color/bg_color_white_FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="0.3"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_find_fm"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:background="@drawable/selector_tv_item_person_froom_fm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="@dimen/global_padding_10"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:text="@string/tv_find_person_private_fm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="0.3"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_find_day_song"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:gravity="bottom"
            android:background="@drawable/selector_tv_item_person_froom_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_find_date"
                android:textColor="@drawable/selector_tv_list_view_item_find_person_groom"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/global_textview_size_11"
                android:text="13"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tv_find_person_height_60" />

            <TextView
                android:layout_marginBottom="@dimen/global_padding_10"
                android:gravity="bottom|center_horizontal"
                android:layout_gravity="bottom"
                android:text="@string/tv_find_person_day_song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="0.3"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_find_hot_song"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:background="@drawable/selector_tv_item_person_froom_sis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="@dimen/global_padding_10"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:text="@string/tv_find_person_hot_song"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>