<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff424542"
        android:orientation="horizontal" >

        <TextView
            style="@style/wheel_pop_title_style"
            android:text="@string/string_wheel_date_txt" />

        <Button
            android:id="@+id/select_wheel_cancel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/mm_title_btn_right"
            android:text="@string/string_wheel_pop_cancel"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/select_wheel_submit"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:background="@drawable/mm_title_act_btn"
            android:text="@string/string_wheel_pop_confim"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</LinearLayout>