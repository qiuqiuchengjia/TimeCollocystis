<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:gravity="center"
             android:padding="@dimen/gridview_padding">

    <ImageView
        android:id="@+id/imgQueue"
        android:layout_width="@dimen/photo_width"
        android:layout_height="@dimen/photo_height"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/imgQueueMultiSelected"
        android:layout_width="@dimen/checkbox_width"
        android:layout_height="@dimen/checkbox_height"
        android:layout_gravity="right"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/picker_on_focus_checkbox"/>

</FrameLayout>