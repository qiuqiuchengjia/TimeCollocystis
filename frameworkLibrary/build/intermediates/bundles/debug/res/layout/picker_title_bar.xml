<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/bg_bar_opacity"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/picker_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/picker_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:text="@string/image_picker"
        android:textColor="@color/text_back"
        android:textSize="@dimen/global_textview_level_4_title" />

    <TextView
        android:id="@+id/picker_done"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:text="@string/done"
        android:textColor="@color/text_back"
        android:textSize="@dimen/global_textview_level_4_title" />

</RelativeLayout>